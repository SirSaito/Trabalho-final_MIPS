.data

	msg: .asciiz "\t\tDigite um numero para saber o seu fatorial: \n" #mensagem de pedido de entrada de variavel;
	msg1: .asciiz "\t\tResultado da variavel: \n" #mensagem de sa√≠da da variavel;

.text
	li $v0, 4
	la $a0, msg
	syscall
	
	li $v0, 5
	syscall
	
	move $t0, $v0
	
	li $t1, 1
	li $s0, 1
	
	while:
	 bgt $t1, $t0, sair
	 mul $s0, $t1, $s0
	 addi $t1, $t1, 1
	 j while
	 
	 sair:
	 li $v0, 1
	 la $a1, msg1
	 move $a0, $s0
	 syscall